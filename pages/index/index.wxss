/* pages/trainList/trainList.wxss */
@import "../../icon.wxss";
@import "../../app.wxss";
/* 通用样式 start */
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start; 
  padding: 0 30rpx;
  font-family: "微软雅黑";
  box-sizing: border-box;
}
.disp_flex {
  display: flex;
}
.bc_red {
  background: #EE5C42;
}
.bc_yellow {
  background: #FCA12C;
}
.bc_blue {
  background: #4DB8F1;
}
.margin-btm-10{
  margin-bottom: 20rpx;
}
.font_white {
  color: white;
}
.font_28 {
  font-size: 56rpx;
}
.font_24 {
  font-size: 48rpx;
}
/* 通用样式 end */

/* 内容列表 start */
.flex-item {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-top: 20rpx;
  padding: 40rpx 40rpx;
  width:100%; 
  height: 240rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
}
.flex-item .detail{
  display: flex;
  justify-content: space-between;
}
.flex-item .img {
  font-size: 44rpx;
}
.upload {
  position: fixed;
  bottom: 250rpx;
  right: 60rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #e64340;
  border-radius: 50%;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}
.upload .rela {
  position: relative;
}
.upload .icon{
  font-size: 60rpx;
}
.upload .abso {
  position: absolute;
  top: -24rpx;
  right: -24rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: #ff8c05;
  font-size: 24rpx;
  text-align: center;
}
/* 内容列表 start */