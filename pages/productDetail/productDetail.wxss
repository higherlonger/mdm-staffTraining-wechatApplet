@import "../../icon.wxss";
/* 通用样式 start */
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;  
  font-family: "微软雅黑";
}
.disp_flex {
  display: flex;
}
.bc_white {
  background: #ffffff;
}
.bc_red {
  background: #EE5C42;
}
.bc_yellow {
  background: #FCA12C;
}
.bc_blue {
  background: #4DB8F1;
}
.margin-top-5{
  margin-top: 10rpx;
}
.margin-top-10{
  margin-top: 20rpx;
}
.margin-btm-10{
  margin-bottom: 20rpx;
}
.margin-rgt-10{
  margin-right: 20rpx;
}
.margin-lft-10{
  margin-left: 20rpx;
}
.font_white {
  color: white;
}
.font_28 {
  font-size: 56rpx;
}
.font_24 {
  font-size: 48rpx;
}
