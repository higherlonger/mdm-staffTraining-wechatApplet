}
/* 通用样式 end */

/* 内容列表 start */
.flex-list {
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.flex-list .flex-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding: 10px;
  width:100%; 
  border-radius: 20rpx 20rpx 0 0;
  box-sizing: border-box;
}
.flex-list .flex-item .flex-c1{
  flex:1;
  display: flex;
  flex-direction: column;
}

.icon-bofang {
  color: #08b7f5;
  font-size: 72rpx;
}
.icon-wendangicon {
  color: #ff9e00;
  font-size: 72rpx;
}
.btn{
  position: fixed;
  bottom: 0;
  width: 100%;
  border: none;
  background: #E64340;
  height: 88rpx;
  color: white;
  font-size: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 内容列表 start */
.show{
  display: block;
}
.notshow{
  display: none;
}