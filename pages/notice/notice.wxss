/* 通用样式 start */
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start; 
  padding: 0 30rpx;
  font-family: "微软雅黑";
  box-sizing: border-box;
}
.none {
  font-size: 36rpx;
  color: #888;
  margin-top: 400rpx;
  text-align: center;
}
.disp_flex {
  display: flex;
}
.show {
  display: block;
}

.notshow {
  display: none;
}

.bc_white {
  background: #ffffff;
}
.bc_red {
  background: #EE5C42;
}
.bc_yellow {
  background: #FCA12C;
}
.bc_blue {
  background: #4DB8F1;
}
.margin-top-5{
  margin-top: 10rpx;
}
.margin-top-10{
  margin-top: 20rpx;
}
.margin-btm-10{
  margin-bottom: 20rpx;
}
.margin-rgt-10{
  margin-right: 20rpx;
}
.margin-lft-10{
  margin-left: 20rpx;
}
.padding-lft-10{
  padding-left: 20rpx;
}
.font_center {
  text-align: center;
}
.font_white {
  color: white;
}
.font_red {
  color: #E64340;
}
.font_yellow {
  color: #FCA12C;
}
.font_green {
  color: #09BB07;
}
.font_28 {
  font-size: 56rpx;
}
.font_24 {
  font-size: 48rpx;
}
.font_18 {
  font-size: 36rpx;
}
.font_16 {
  font-size: 32rpx;
}
.border_rgt {
  border-right: 1px solid #BBBBBB;
}
/* 通用样式 end */

/* 内容列表 start */
.flex-list {
  display: flex;
  flex-direction: column;
}
.flex-list .flex-item {
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 20rpx;
  padding: 20rpx;
  width:100%; 
  border-radius: 20rpx;
  box-sizing: border-box;
}
.flex-list .flex-item .item-left {
  flex: 0.25;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.flex-list .flex-item .item-right {
  flex: 0.75;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
/* 内容列表 start */